{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js Debug (Node)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/.next/server/**/*.js"
      ],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
